    "@types/koa-router": "^7.0.40",
    "nodemon": "^1.18.11",
    "sass": "^1.19.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.3"
  },
  "browserslist": [
    "since 2017-06"
  ]
}
