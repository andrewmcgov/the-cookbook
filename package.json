{
  "name": "thecookbook",
  "version": "1.0.0",
  "description": "An app to store and search recepies",
  "main": "index.js",
  "scripts": {
    "start": "tsc && yarn client:build && NODE_ENV=PRODUCTION node server_build/server/server.js",
    "setup": "tsc",
    "server:dev": "concurrently \"tsc -w\" \"nodemon server_build/server/server.js --ignore client/ --ignore dist/ --ignore .cache/\"",
    "server:prod": "NODE_ENV=PRODUCTION node server_build/server/server.js",
    "client:dev": "parcel client/app.html",
    "client:build": "parcel build client/app.html",
    "dev": "concurrently \"yarn server:dev\" \"yarn client:dev\" \"sleep 2 && open http://localhost:3000 \" --names \"server,client\" -c \"yellow,cyan\"",
    "now-build": "parcel build client/app.html",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Andrew McGoveran",
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.4.3",
    "bcrypt": "^3.0.6",
    "dotenv": "^8.0.0",
    "graphql": "^14.2.1",
    "graphql-tag": "^2.10.1",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.7.0",
    "koa-graphql": "^0.8.0",
    "koa-proxy": "^0.9.0",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "koa-static": "^5.0.0",
    "mongoose": "^5.5.7",
    "parcel-bundler": "^1.12.3",
    "react": "^16.9.0",
    "react-apollo": "^3.0.0",
    "react-dom": "^16.9.0",
    "react-dropzone": "^10.1.5",
    "react-icons": "^3.7.0",
    "react-router-dom": "^5.0.0",
    "slug": "^1.1.0"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.0.0",
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/enzyme": "^3.10.3",
    "@types/graphql": "^14.2.0",
    "@types/imagemin": "^6.0.0",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.40",
    "@types/koa-send": "^4.1.2",
    "@types/koa-static": "^4.0.1",
    "@types/mongodb": "^3.3.1",
    "@types/mongoose": "^5.5.0",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.4",
    "@types/react-json-pretty": "^1.3.4",
    "@types/react-router-dom": "^4.3.3",
    "@types/slug": "^0.9.1",
    "babel-jest": "^24.8.0",
    "concurrently": "^4.1.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest": "^24.8.0",
    "nodemon": "^1.18.11",
    "sass": "^1.19.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.3",
    "waait": "^1.0.5"
